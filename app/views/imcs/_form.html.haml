= form_for(@imc) do |f|
  - if @imc.errors.any?
    #error_explanation
      %h2
        = pluralize(@imc.errors.count, "error")
        prohibited this imc from being saved:
      %ul
        - @imc.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :poids
    %br/
    = f.number_field :poids
  .field
    = f.label :taille
    %br/
    = f.number_field :taille
  .field
    = f.label :date
    %br/
    = f.datetime_select :date
  .actions
    = f.submit
